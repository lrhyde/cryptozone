<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp"
    tools:context=".ExerciseFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/mono"
        android:textColor="@color/white"
        android:text="[thing] encrypting exercises"
        android:id="@+id/eheading"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="200dp"
        android:textColor="@color/white"
        android:text="phrase is:"
        android:fontFamily="@font/mono"
        android:id="@+id/nonexistant2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="230dp"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:fontFamily="@font/data"
        android:text="[phrase]"
        android:id="@+id/ephrase"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="300dp"
        android:textColor="@color/white"
        android:fontFamily="@font/mono"
        android:text="hint"
        android:id="@+id/ehint"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginVertical="400dp"
        android:fontFamily="@font/mono"
        android:id="@+id/einput"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="input your guess here"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginVertical="475dp"
        android:fontFamily="@font/mono"
        android:id="@+id/submitbutton"
        android:onClick="submit"
        android:text="submit"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginVertical="525dp"
        android:id="@+id/epa"
        android:fontFamily="@font/mono"
        android:onClick="ereset"
        android:text="Practice Another"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:fontFamily="@font/mono"
        android:layout_gravity="right"
        android:text="next"
        android:textSize="10dp"
        android:onClick="button"
        />

</FrameLayout>