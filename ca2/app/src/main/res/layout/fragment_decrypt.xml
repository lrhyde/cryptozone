<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DecryptFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="[thing] decrypting exercises"
        android:id="@+id/dheading"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="200dp"
        android:text="phrase is: [phrase]"
        android:id="@+id/dphrase"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="300dp"
        android:text="key is"
        android:id="@+id/dkey"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginVertical="400dp"
        android:id="@+id/dinput"
        android:text="input your guess here"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginVertical="450dp"
        android:id="@+id/submitbutton"
        android:onClick="submit"
        android:text="submit"
        />

</FrameLayout>